{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:kotlinMonorepo",
    "helpers:pinGitHubActionDigests",
    "schedule:weekly"
  ],
  "semanticCommits": "enabled",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Production dependencies use fix(deps) prefix",
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Development dependencies use chore(deps) prefix",
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "GitHub Actions get chore(deps) prefix",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": ["patch", "minor"],
      "ignoreUnstable": true,
      "automerge": true
    }
  ]
}
